<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

            <variable
                name="ViewModel"
                type="com.first.springer.proccessactivites.ProccessViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F3F3"
        tools:context=".proccessactivites.Profile">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/profilehorizontal2"
            app:layout_constraintEnd_toStartOf="@+id/profilevertical2"
            app:layout_constraintStart_toStartOf="@+id/profilevertical1"
            app:layout_constraintTop_toTopOf="@+id/profilehorizontal1"
            app:layout_constraintVertical_bias="0.0"
            app:strokeColor="#00918E"
            app:strokeWidth="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#FFFFFF">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardvertical1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardvertical2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.10" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardvertical3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.20" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardvertical4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.80" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardvertical5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.30" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardvertical6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.40" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardvertical7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.50" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardvertical8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.60" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardvertical9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.90" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/editicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/circleback"
                    app:layout_constraintBottom_toTopOf="@+id/profilecardhorizontal2"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical1"
                    app:layout_constraintTop_toTopOf="@+id/profilecardhorizontal2">

                </de.hdodenhof.circleimageview.CircleImageView>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/selectimage"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:clickable="true"
                    android:src="@drawable/noimage"
                    app:layout_constraintBottom_toTopOf="@+id/profilecardhorizgjhhjgontal2"
                    app:layout_constraintEnd_toStartOf="@+id/profilecardvertical8"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical6"
                    app:layout_constraintTop_toTopOf="@+id/profilecardhorizontal1">

                </de.hdodenhof.circleimageview.CircleImageView>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardhorizontal1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.01" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardhorizontal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardhorizgjhhjgontal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.13" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardhorizontal3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.98" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardhorizontal4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.25" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardhorizontal5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.30" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardhorizontal6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.35" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardhorizontal7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.40" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardhorizontal8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.45" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardhorizontal9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.50" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardhorizontal10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.55" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardhorizontal11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.60" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profilecardhorizontal12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_end="260dp"
                    app:layout_constraintGuide_percent="0.68" />

                <TextView
                    android:id="@+id/personalinfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Personal Information"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/profilecardhorizontal4"
                    app:layout_constraintEnd_toStartOf="@+id/profilecardvertical4"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical3"
                    app:layout_constraintTop_toBottomOf="@+id/selectimage" />

                <TextView
                    android:id="@+id/namehint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Name"
                    android:textAlignment="center"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/profilecardhorizontal5"
                    app:layout_constraintEnd_toStartOf="@+id/profilecardvertical5"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical2"
                    app:layout_constraintTop_toTopOf="@+id/profilecardhorizontal4" />

                <ImageView
                    android:id="@+id/namehintimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/person"
                    app:layout_constraintBottom_toTopOf="@+id/profilecardhorizontal5"
                    app:layout_constraintEnd_toStartOf="@+id/profilecardvertical2"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical1"
                    app:layout_constraintTop_toTopOf="@+id/profilecardhorizontal4" />

                <ImageView
                    android:id="@+id/emailhintimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mail"
                    app:layout_constraintBottom_toTopOf="@+id/profilecardhorizontal7"
                    app:layout_constraintEnd_toStartOf="@+id/profilecardvertical2"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical1"
                    app:layout_constraintTop_toTopOf="@+id/profilecardhorizontal6" />

                <ImageView
                    android:id="@+id/agehintimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_age"
                    app:layout_constraintBottom_toTopOf="@+id/profilecardhorizontal9"
                    app:layout_constraintEnd_toStartOf="@+id/profilecardvertical2"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical1"
                    app:layout_constraintTop_toTopOf="@+id/profilecardhorizontal8" />


                <ImageView
                    android:id="@+id/genderhintimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_gender"
                    app:layout_constraintBottom_toTopOf="@+id/profilecardhorizontal11"
                    app:layout_constraintEnd_toStartOf="@+id/profilecardvertical2"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical1"
                    app:layout_constraintTop_toTopOf="@+id/profilecardhorizontal10" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@={ViewModel.EditName}"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/profilecardvertical7"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical1"
                    app:layout_constraintTop_toTopOf="@+id/profilecardhorizontal5" />

                <TextView
                    android:id="@+id/emailhint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="E-mail"
                    android:textAlignment="center"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/profilecardhorizontal7"
                    app:layout_constraintEnd_toStartOf="@+id/profilecardvertical5"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical2"
                    app:layout_constraintTop_toTopOf="@+id/profilecardhorizontal6" />

                <TextView
                    android:id="@+id/genderhint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Gender"
                    android:textAlignment="center"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/profilecardhorizontal11"
                    app:layout_constraintEnd_toStartOf="@+id/profilecardvertical6"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical2"
                    app:layout_constraintTop_toTopOf="@+id/profilecardhorizontal10" />

                <TextView
                    android:id="@+id/maletext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Male"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/profilecardhorizontal12"
                    app:layout_constraintEnd_toStartOf="@+id/profilecardvertical6"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical3"
                    app:layout_constraintTop_toTopOf="@+id/profilecardhorizontal11" />


                <TextView
                    android:id="@+id/femaletext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Female"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/profilecardhorizontal12"
                    app:layout_constraintEnd_toStartOf="@+id/profilecardvertical9"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical8"
                    app:layout_constraintTop_toTopOf="@+id/profilecardhorizontal11" />

                <TextView
                    android:id="@+id/agehint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Age"
                    android:textAlignment="center"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/profilecardhorizontal9"
                    app:layout_constraintEnd_toStartOf="@+id/profilecardvertical5"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical2"
                    app:layout_constraintTop_toTopOf="@+id/profilecardhorizontal8" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@={ViewModel.EditEmail}"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/profilecardvertical4"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical1"
                    app:layout_constraintTop_toTopOf="@+id/profilecardhorizontal7" />

                <TextView
                    android:id="@+id/agetext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@={ViewModel.EditAge}"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/profilecardvertical7"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical1"
                    app:layout_constraintTop_toTopOf="@+id/profilecardhorizontal9" />

                <ImageView
                    android:id="@+id/maleselect"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:src="@drawable/bordercircle"
                    app:layout_constraintBottom_toTopOf="@+id/profilecardhorizontal12"
                    app:layout_constraintEnd_toStartOf="@+id/profilecardvertical3"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical2"
                    app:layout_constraintTop_toTopOf="@+id/profilecardhorizontal11" />

                <ImageView
                    android:id="@+id/femaleselect"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:src="@drawable/bordercircle"
                    app:layout_constraintBottom_toTopOf="@+id/profilecardhorizontal12"
                    app:layout_constraintEnd_toStartOf="@+id/femaletext"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical7"
                    app:layout_constraintTop_toTopOf="@+id/profilecardhorizontal11" />

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:layout_constraintBottom_toBottomOf="@+id/editicon"
                    app:layout_constraintEnd_toEndOf="@+id/editicon"
                    app:layout_constraintStart_toStartOf="@+id/profilecardvertical1"
                    app:layout_constraintTop_toTopOf="@+id/editicon"
                    app:srcCompat="@drawable/edit" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profilehorizontal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profilehorizontal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.98" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profilevertical1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.05" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profilevertical2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.95" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>