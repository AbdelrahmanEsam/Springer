<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ViewModel"
            type="com.apptikar.springer.proccessactivites.ProcessViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/editprofile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".proccessactivites.Profile">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/profilehorizontal2"
            app:layout_constraintEnd_toStartOf="@+id/profilevertical2"
            app:layout_constraintStart_toStartOf="@+id/profilevertical1"
            app:layout_constraintTop_toTopOf="@+id/profilehorizontal1"
            app:layout_constraintVertical_bias="0.0"
            app:cardCornerRadius="20dp"
            app:strokeWidth="2dp"
            app:strokeColor="#00918E"
            android:background="#FFFFFF">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#FFFFFF">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_age"
                        app:layout_constraintBottom_toBottomOf="@+id/agehint"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical2"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical1"
                        app:layout_constraintTop_toTopOf="@+id/agehint" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/profilecardvertical1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="20dp"
                        app:layout_constraintGuide_percent="0.05" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/profilecardvertical2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="20dp"
                        app:layout_constraintGuide_percent="0.10" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/profilecardvertical3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="20dp"
                        app:layout_constraintGuide_percent="0.20" />


                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/profilecardvertical4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="20dp"
                        app:layout_constraintGuide_percent="0.80" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/profilecardvertical5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="20dp"
                        app:layout_constraintGuide_percent="0.30" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/profilecardvertical6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="20dp"
                        app:layout_constraintGuide_percent="0.40" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/profilecardvertical7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="20dp"
                        app:layout_constraintGuide_percent="0.50" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/profilecardvertical8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="20dp"
                        app:layout_constraintGuide_percent="0.60" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/profilecardvertical9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="20dp"
                        app:layout_constraintGuide_percent="0.90" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/selectimage"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:src="@drawable/noimage"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical8"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical6"
                        app:layout_constraintTop_toTopOf="parent">

                    </de.hdodenhof.circleimageview.CircleImageView>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageView12"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:clickable="true"
                        android:elevation="5dp"
                        android:src="#ffffff"
                        app:layout_constraintBottom_toBottomOf="@+id/selectimage"
                        app:layout_constraintEnd_toEndOf="@+id/selectimage"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical7"
                        app:layout_constraintTop_toTopOf="@+id/selectimage"
                        app:layout_constraintVertical_bias="1.0" />


                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="6dp"
                        android:src="@drawable/ic_camera_alt_black_24dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
                        app:layout_constraintEnd_toEndOf="@+id/imageView12"
                        app:layout_constraintStart_toStartOf="@+id/imageView12"
                        app:layout_constraintTop_toTopOf="@+id/imageView12" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/save"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/buttons3"
                        android:fontFamily="@font/varela_round"
                        android:gravity="center"
                        android:text="Save"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical4"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical3"
                        app:layout_constraintTop_toBottomOf="@+id/yourpassdit" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Personal Information"
                        android:fontFamily="@font/varela_round"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical9"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical2"
                        app:layout_constraintTop_toBottomOf="@+id/selectimage" />

                    <TextView
                        android:id="@+id/namehint"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Name"
                        android:fontFamily="@font/varela_round"
                        android:textAlignment="center"
                        android:textColor="#707070"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical5"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical2"
                        app:layout_constraintTop_toBottomOf="@+id/textView13" />

                    <ImageView
                        android:id="@+id/namehintimage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/person"
                        app:layout_constraintBottom_toBottomOf="@+id/namehint"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical2"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical1"
                        app:layout_constraintTop_toTopOf="@+id/namehint" />

                    <ImageView
                        android:id="@+id/emailhintimage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mail"
                        app:layout_constraintBottom_toBottomOf="@+id/emailhint"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical2"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical1"
                        app:layout_constraintTop_toTopOf="@+id/emailhint" />


                    <ImageView
                        android:id="@+id/genderedithintimage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_gender"
                        app:layout_constraintBottom_toBottomOf="@+id/genderhint"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical2"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical1"
                        app:layout_constraintTop_toTopOf="@+id/genderhint" />

                    <ImageView
                        android:id="@+id/passedithintimage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pass"
                        app:layout_constraintBottom_toBottomOf="@+id/passhint"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical2"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical1"
                        app:layout_constraintTop_toTopOf="@+id/passhint" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/yournameedit"
                        style="@style/TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxStrokeColor="#00918E"
                        app:hintTextColor="#00918E"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical9"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical1"
                        app:layout_constraintTop_toBottomOf="@+id/namehint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="left"
                            android:fontFamily="@font/varela_round"
                            android:maxLines="1"
                            android:text="@={ViewModel.editName}"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="15sp"
                            android:textStyle="normal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/emailhint"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="E-mail"
                        android:fontFamily="@font/varela_round"
                        android:textAlignment="center"
                        android:textColor="#707070"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical5"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical2"
                        app:layout_constraintTop_toBottomOf="@+id/yournameedit" />

                    <TextView
                        android:id="@+id/genderhint"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Gender"
                        android:fontFamily="@font/varela_round"
                        android:textAlignment="center"
                        android:textColor="#707070"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical6"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical2"
                        app:layout_constraintTop_toBottomOf="@+id/youragedit" />

                    <TextView
                        android:id="@+id/maletext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Male"
                        android:fontFamily="@font/varela_round"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical6"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical3"
                        app:layout_constraintTop_toBottomOf="@+id/genderhint" />


                    <TextView
                        android:id="@+id/femaletext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Female"
                        android:fontFamily="@font/varela_round"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical9"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical8"
                        app:layout_constraintTop_toBottomOf="@+id/genderhint" />

                    <TextView
                        android:id="@+id/agehint"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Age"
                        android:fontFamily="@font/varela_round"
                        android:textAlignment="center"
                        android:textColor="#707070"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical5"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical2"
                        app:layout_constraintTop_toBottomOf="@+id/youremailedit" />

                    <TextView
                        android:id="@+id/passhint"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:text="Password"
                        android:fontFamily="@font/varela_round"
                        android:textAlignment="center"
                        android:textColor="#707070"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical6"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical2"
                        app:layout_constraintTop_toBottomOf="@+id/maletext" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/youremailedit"
                        style="@style/TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxStrokeColor="#00918E"
                        app:hintTextColor="#00918E"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical9"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical1"
                        app:layout_constraintTop_toBottomOf="@+id/emailhint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="left"
                            android:maxLines="1"
                            android:fontFamily="@font/varela_round"
                            android:text="@={ViewModel.editEmail}"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="15sp"
                            android:textStyle="normal"

                            />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/youragedit"
                        style="@style/TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxStrokeColor="#00918E"
                        app:hintTextColor="#00918E"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical9"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical1"
                        app:layout_constraintTop_toBottomOf="@+id/agehint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="left"
                            android:inputType="number"
                            android:fontFamily="@font/varela_round"
                            android:maxLines="1"
                            android:text="@={ViewModel.editAge}"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/yourpassdit"
                        style="@style/TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxStrokeColor="#00918E"
                        app:hintTextColor="#00918E"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical9"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical1"
                        app:layout_constraintTop_toBottomOf="@+id/passhint"
                        app:passwordToggleEnabled="true"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:fontFamily="@font/varela_round"
                            android:text="@={ViewModel.editPassword}"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="15sp"
                            android:textStyle="normal"

                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/maleselect"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="30dp"
                        android:clickable="true"
                        android:src="@drawable/bordercircle"
                        app:layout_constraintEnd_toStartOf="@+id/profilecardvertical3"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical2"
                        app:layout_constraintTop_toBottomOf="@+id/genderhint" />

                    <ImageView
                        android:id="@+id/femaleselect"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/bordercircle"
                        android:clickable="true"
                        app:layout_constraintEnd_toStartOf="@+id/femaletext"
                        app:layout_constraintStart_toStartOf="@+id/profilecardvertical7"
                        app:layout_constraintTop_toBottomOf="@+id/genderhint" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profilehorizontal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profilehorizontal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.98" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profilevertical1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.05" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profilevertical2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.95" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>